        </div>

      </div>
    </section><!-- End About Section -->




    <!-- ======= Most picks ======= -->
    <section id="steps" class="steps section-bg">
      <div class="container">
          <div class="row">
            <div class="col">
                <h4>Most Picks</h4>
              </div>
          </div>
        
        <div style="display:flex;flex-direction:row;justify-content:space-around">

            <div style="position:relative;" data-aos="fade-in" >
                <img src="~/img/new/@first_mostpicks.Image" class="img-fluid" alt="" width="inherit" height="inherit" style="border-radius:20px;" data-aos="fade-in">
                <span style="position:absolute; bottom:10px; left:10px; background-color:white; padding:5px 10px; border-radius:10px; color:black; font-weight:bold;">@first_mostpicks.NameOfProp,@first_mostpicks.Location,Indonesia</span>
                <span style="position:absolute; top:10px; right:10px; background-color:deeppink; padding:5px 10px; border-radius:10px; color:white; font-weight:bold;">$@first_mostpicks.Price per night</span>
            </div> 
            
            
            <div class="col-8 row no-gutters">

            @if(mostpicks != null)
            {
                @foreach(var property in mostpicks)
                {
                    
         
                        @if(property == first_mostpicks )
                        {
                            continue;
                        }
                        else
                        {
                        
                             <div class="col-lg-6 col-md-6" data-aos="fade-in">
                                <div style="position:relative;">
                                    <img src="~/img/new/@property.Image" class="img-fluid" alt="" width="inherit" height="inherit" style="border-radius:20px;" data-aos="fade-in">
                                    <span style="position:absolute; bottom:10px; left:10px; background-color:white; padding:5px 10px; border-radius:10px; color:black; font-weight:bold;">@property.NameOfProp,@property.Location, Indonesia</span>
                                    <span style="position:absolute; top:10px; right:10px; background-color:deeppink; padding:5px 10px; border-radius:10px; color:white; font-weight:bold;">$@property.Price per night</span>
                                </div>
                            </div>
             
                        }
                  
                }
               
            } 
            </div>
            

       </div>

      </div>
    </section><!-- End Most Picks -->



